<id.technomotion.stickyheaderviewpager.widget.TouchCallbackLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/layout"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:layout_marginTop="@dimen/tabs_height"
        android:id="@id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@id/header"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/viewpager_header_height"
            android:id="@+id/imageView"
            android:src="@drawable/ny"
            android:scaleType="centerCrop"/>

        <id.technomotion.stickyheaderviewpager.widget.SlidingTabLayout
            android:id="@id/tabs"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tabs_height"/>
    </LinearLayout>

</id.technomotion.stickyheaderviewpager.widget.TouchCallbackLayout>
